<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.asd.s4.board.qna.QnaDAO">

	<select id="getList" parameterType="Pager" resultType="QnaDTO">
		select * from
		(select rownum R, N.* from 
		(select * from qna where 
		<choose>
			<when test="kind == 'tt'">
				title
			</when>
			
			<when test="kind == 'wr'">
				writer
			</when>
			
			<otherwise>
				contents
			</otherwise>
		</choose>
		like '%'||#{search}||'%' order by ref desc, step asc) N)
		where R between #{startRow} and #{lastRow}
	</select>
	
	<select id="getCount" resultType="Long" parameterType="Pager">
		select count(num) from qna
		where 
		<choose>
			<when test="kind == 'tt'">
				title
			</when>
			<when test="kind == 'wr'">
				writer
			</when>
			<otherwise>
				contents
			</otherwise>
		</choose>
		like '%' || #{search} || '%'
	
	</select>
	
	<delete id="setDelete" parameterType="QnaDTO">
		delete qna where num=#{num}
	</delete>

	<insert id="setInsert" parameterType="QnaDTO">
		insert into qna values(qna_seq2.nextval
		, #{title}, #{writer}, #{contents}, sysdate, 0, qna_seq2.currval, 0, 0)
	</insert>
	
	<update id="setReplyUpdate" parameterType="QnaDTO">
		update qna set step=step+1 where ref=#{ref} and step>#{step}
	</update>
	
	<insert id="setReply" parameterType="QnaDTO">
		insert into qna values(qna_seq2.nextval
		, #{title}, #{writer}, #{contents}, sysdate, 0, #{ref}, #{step}, #{depth})
	</insert>
	
	<select id="getSelect" parameterType="QnaDTO" resultType="QnaDTO">
		select *  from qna where num =#{num}
	</select>
	
	
</mapper>